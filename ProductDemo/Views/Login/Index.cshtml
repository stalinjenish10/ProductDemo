@model ProductDemo.ViewModels.LoginViewModel;
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Login
                    </div>
                    <div class="card-body">
                        <form asp-action="Index" method="post">
                            <div class="form-group">
                                <label for="username">Username:</label>
                                <input type="text" class="form-control" required asp-for="UserName" name="username" />
                            </div>
                            <div class="form-group">
                                <label for="password">Password:</label>
                                <input type="password" class="form-control" required asp-for="Password" id="password" name="password" />
                            </div>
                            <br /><br />
                            <button type="submit" class="btn btn-primary">Login</button>

                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="row">
                                    <label class="text-danger">You have entered an invalid username or password</label>
                                </div>
                            }


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
